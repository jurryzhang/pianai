@charset "utf-8";
/* CSS Document */

body{ margin:0 auto; background-color:#e9eaec;}
ul,p,h1,h2,h3,dl,dd{ margin:0; padding:0;}
li{ list-style:none;}
a{ text-decoration:none;}
img{ display:block;}
*{ font-family:"微软雅黑"；}
.clearfix{ clear:both;}




.vote_bigbox{ background-color:#fff;}

.title{ padding:20px 20px; border-bottom:1px solid #ccc;}
.title h1{ font-size:24px; float:left; color:#F94043;}
.title p{ font-size:16px; float:right; color:#F94043;}

.vote_box{ margin:0 20px; padding-bottom:40px;}

.vote_box li{ border-bottom:1px #cccccc solid; margin-top:20px; padding-bottom:10px;}

.vote_img{ position:relative; float:left; margin-right:10px; background-color:#31b573; color:#fff; padding:6px 10px;border-radius:4px;}
.vote_img01{ position:relative; width:100%;}

.vote_content{ float:left; width:90%;}
.vote_title a{ font-size:20px; color:#565656;}
.vote_box dl{ font-size:16px; color:#808080; margin-bottom:20px; line-height:28px;}

.vote_box dd{ font-size:18px; color:#333; margin-top:10px; font-weight:bold;}
.vote_box span{ color:#F94043; font-size:22px;}

.vote_box .arrow{ float:right;}
.vote_box .arrow img{ margin-left:8px; margin-bottom:6px;}
.vote_box .arrow p{ color:#31b573;border-radius:4px; border:1px solid #31b573; font-size:12px; line-height:24px; padding:0 10px; text-align:center;}
.vote_box .arrow p:hover{ color:#fff; background-color:#31b573;}





.vote_arrow{ position:fixed; top:20%;left:20%;display:none;}
.vote_arrow img{ float:left; margin-right:10px;}
.vote_arrow .arrow{ color:#31b573; font-size:20px; border:2px solid #31b573; border-radius:6px; display:inline-block; line-height:30px; padding:0 20px;}
.vote_arrow .arrow:hover{ background-color:#31b573; color:#FFF;}

.register_box{ background-color:#f5f5f5; border:1px solid #31b573; right:70px; border-radius: 10px;}
.register_box dt{width:100%; border-bottom:1px solid #f5f5f5; color:#fff; background-color:#31b573; line-height:50px; margin-bottom:20px; text-align:center; border-radius:8px 8px 0 0; font-size:20px; font-weight:bold;}
.register_box dd{ width:100%; margin-bottom:10px; padding:0 40px;}
.register_box h3{ float:left; font-size:16px; line-height:30px; margin-right:10px;}
.register_box input{ height:30px;}
.register_box .register{ width:60px;display:inline-block; margin-left:90px; margin-top:10px; margin-bottom:20px;}
